{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/components", "src/types/content.d.ts"]
}

